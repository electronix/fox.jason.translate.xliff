<project basedir="." default="unit-test">
	<import file="../bootstrap.xml"/>
	<description>
		Expect that using a pre-exisiting XLIFF cache will pre-populate translations
	</description>
	<target name="unit-test">
		<delete dir="${basedir}/out" failonerror="false"/>
		<delete dir="${basedir}/temp" failonerror="false"/>

		<echo file="${basedir}/test.properties" message="translate.cachefile=${basedir}/translate-cache.xlf"/>

		<exec-transtype transtype="xliff-create"/>
		<compare-output expectation="${basedir}/expected.xlf" result="${basedir}/out/translate.xlf"/>
	</target>
</project>