<project name="unit-test.bootstrap">
	<!-- 
		Local definitions for dita.dir and test.root.dir are required to run
		individual tests locally.
	-->	
	<dirname property="test.root.dir" file="${ant.file.unit-test.bootstrap}/.." />
	<property name="dita.dir" location="${test.root.dir}/../.."/> 
	<!-- 
		Load the unit testing library to make the macros available to the unit-tests 
	-->
	<typedef file="${dita.dir}/plugins/fox.jason.unit-test/resource/antlib.xml"/>


	<macrodef name="order-xliff">
		<attribute name="file"/>
		<sequential>
			<tempfile deleteonexit="true" property="unordered-document" suffix=".xlf" destdir="${dita.temp.dir}" 
/>
			<tempfile deleteonexit="true" property="ordered-document" suffix=".xlf" destdir="${dita.temp.dir}" 
/>
			<copy file="@{file}" tofile="${ordered-document}"/>
			<!--xslt classpathref="xslt.class.path" in="${unordered-document}" out="${ordered-document}" style="${test.root.dir}/test/order.xsl"/-->

			<xmltask 
				expandEntityReferences="false"
				dest="@{file}" outputter="simple" source="${ordered-document}">
			</xmltask>
			<!--copy tofile="@{file}" file="${ordered-document}"/-->
		</sequential>
	</macrodef>

	<target name="init.lib">
		<taskdef resource="fox/jason/translate/antlib.xml">
			<classpath>
				<pathelement location="${dita.dir}/plugins/fox.jason.translate.xliff/lib/translate-1.0.jar"/>
				<pathelement location="${dita.dir}/plugins/fox.jason.translate.xliff/lib/json-simple-1.1.1.jar"/>
			</classpath>
		</taskdef>
	</target>

</project>